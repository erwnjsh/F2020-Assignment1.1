<%- include ../partials/header.ejs %>  
  
<%- include ../partials/main_nav.ejs %>  

<main >
     
    <div uk-grid class="" style="padding-top: 10%; padding-bottom: 5%" uk-scrollspy="target: > div; cls: uk-animation-slide-bottom-medium; delay: 100; repeat: true">
        <div class="uk-width-1-6"></div>
        
        <div class="uk-width-expand uk-card uk-card-default uk-card-body uk-card-hover">
            <h1><%= title %></h1> 
            <!-- START OF TABLE -->
            <a class="uk-button uk-button-primary " href="contact-list/add"><span class="uk-margin-small-right" uk-icon="plus-circle"></span> Add New Contact</a>
            <table class="uk-table uk-table-hover uk-table-divider" id="contactList">
                <!-- HEADER ROW -->
                <thead>
                    <tr uk-filter="target: .js-filter">
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <!-- REPEATABLE TEMPLATE ROW -->
                <tbody>
                    <% for(let count = 0; count < ContactList.length; count++ ) { %>
                    <tr>
                        <td><%= ContactList[count].Contact_Name %></td>
                        <td><%= ContactList[count].Contact_Number %></td>
                        <td><%= ContactList[count].Contact_Email %></td>
                        <td>
                            <a class="uk-button uk-button-primary" href="/contact-list/edit/<%= ContactList[count]._id %>"><span class="uk-margin-small-right" uk-icon="pencil"></span>Edit</a>
                        </td>
                        <td>
                            <a class="uk-button uk-button-danger" href="/contact-list/delete/<%= ContactList[count]._id %>"><span class="uk-margin-small-right" uk-icon="trash"></span>Delete</a>
                        </td>
                    </tr>
                    <% } %> 
                </tbody>
            </table> 
        </div>

        <div class="uk-width-1-6"></div>
    </div> 
</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %> 